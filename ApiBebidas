const express = require('express');
const api = express();

api.use(express.json());
const bebidas = ['Cerveja', 'Vinhos', 'Destilados', 'Cervejas Especiais'];

api.get('/bebidas/:app', (req, res) => { //retorna um tipo de bebida.
    const { app } = req.parametros;
    return res.json(bebidas[app]);
});

api.get('/bebidas', (req, res) => { //retorna todos os tipos de bebidas.
    return res.json(bebidas);
});

api.post('/bebidas', (req, res) => { //cria uma nova classificação de bebida.
    const { name } = req.body; //body para atualizar.
    bebidas.push(name);
    return res.json(bebidas);
});

api.delete('/bebidas/:app', (req, res) => { // solicitando a exclusão de uma bebida.
    const { app } = req.params;
    cursos.splice(app, 1);
    return res.json({ mensagem: 'A bebida foi deletada' });
});

api.listen (5000,() =>{
    console.log ('A api esta funcionando...');
});
